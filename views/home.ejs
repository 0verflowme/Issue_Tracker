<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content w-100">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add a Issue</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form action="/" method="post">
        <div class="form-group px-3">
          <label for="recipient-name" class="col-form-label">Author:</label>
          <input type="text" name="author" class="form-control" id="recipient-name">
        </div>
        <div class="form-group px-3">
          <label for="recipient-name" class="col-form-label">Name of Project:</label>
          <input type="text" name="name" class="form-control" id="recipient-name">
        </div>
        <div class="form-group px-3 mb-1">
          <label for="message-text" class="col-form-label">Description:</label>
          <textarea class="form-control" name="description" id="message-text"></textarea>
        </div>
        <!-- </div> -->

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Save changes</button>
        </div>
      </form>
    </div>
  </div>
</div>


<div class="d-flex flex-wrap w-75 m-auto pt-5 h-100">
  <% project.forEach(element=> { %>
    <div class=" card text-bg-primary mb-3 m-2" style="max-width: 18rem;">
      <div class="card-header">
        <%= element.author %>
      </div>
      <div class="card-body">
        <h5 class="card-title">
          <%= element.name %>
        </h5>
        <p class="card-text">
          <%= element.description %>
        </p>
        <a href="/get/<%= element.id %> " class="btn btn-primary">Go to Issues Page</a>
      </div>
    </div>
    <% }) %>
</div>


